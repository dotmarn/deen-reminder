{
    "author": "Ridwan Kasim",
    "description": "An extension that displays random hadiths & Qur'an verses for Muslims.",
    "short_name": "DeenReminder",
    "version": "1.0.0",
    "manifest_version": 2,
    "name": "Deen Reminder",
    "permissions": [
        "activeTab"
    ],
    "browser_action": {
        "default_title": "Boost your Eeman",
        "default_icon": "images/16x16.png",
        "default_popup": "popup.html"
    },
    "chrome_url_overrides": {
        "newtab": "newtab.html"
    },
    "icons": {
        "16": "images/16x16.png",
        "48": "images/48x48.png",
        "128": "images/128x128.png"
    }
}